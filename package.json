{
  "name": "storj-uplink-nodejs",
  "version": "0.1.0-beta.13",
  "description": "Node.js bindings for Storj's uplink-c library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "npm run build:ts && npm run build:native",
    "build:ts": "tsc",
    "build:native": "node-gyp rebuild",
    "clean": "node -e \"const fs=require('fs');['dist','build'].forEach(d=>fs.rmSync(d,{recursive:true,force:true}))\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:unit": "jest --config jest.config.unit.js",
    "test:integration": "jest test/integration --testTimeout=60000",
    "test:memory": "UPLINK_LOG_LEVEL=error node --expose-gc node_modules/.bin/jest test/memory --testTimeout=1800000 --runInBand",
    "test:e2e": "jest --config jest.config.e2e.js --runInBand",
    "test:e2e:install": "jest --config jest.config.e2e.js --testPathPattern='00-installation'",
    "test:e2e:bucket": "jest --config jest.config.e2e.js --testPathPattern='01-bucket'",
    "test:e2e:upload": "jest --config jest.config.e2e.js --testPathPattern='02-upload'",
    "test:e2e:download": "jest --config jest.config.e2e.js --testPathPattern='03-download'",
    "test:e2e:multipart-upload": "jest --config jest.config.e2e.js --testPathPattern='04-multipart-upload'",
    "test:e2e:multipart-download": "jest --config jest.config.e2e.js --testPathPattern='05-multipart-download'",
    "test:e2e:list": "jest --config jest.config.e2e.js --testPathPattern='06-list'",
    "test:e2e:object-ops": "jest --config jest.config.e2e.js --testPathPattern='07-object'",
    "test:e2e:access": "jest --config jest.config.e2e.js --testPathPattern='08-access'",
    "test:e2e:cleanup": "jest --config jest.config.e2e.js --testPathPattern='09-cleanup'",
    "test:install": "jest --config jest.config.install.js --runInBand",
    "test:c": "npm run test:c:helpers && npm run test:c:string && npm run test:c:handle",
    "test:c:helpers": "cc -std=c11 -Wall -Wextra -I native/test native/test/test_helpers.c -o native/test/test_helpers && ./native/test/test_helpers",
    "test:c:string": "cc -std=c11 -Wall -Wextra -I native/test native/test/test_string_helpers.c -o native/test/test_string_helpers && ./native/test/test_string_helpers",
    "test:c:handle": "cc -std=c11 -Wall -Wextra -I native/test native/test/test_handle_helpers.c -o native/test/test_handle_helpers && ./native/test/test_handle_helpers",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:all": "npm run test:c && npm run test",
    "benchmark": "npx ts-node test/benchmarks/upload.bench.ts",
    "memory-check": "./scripts/test-memory",
    "security": "npm run security:lint && npm run security:audit && npm run security:sast",
    "security:lint": "eslint src/",
    "security:audit": "npm audit --audit-level=high",
    "security:sast": "semgrep --config=auto --config=p/typescript --config=p/nodejs --config=.semgrep.yml . || true",
    "security:c": "node scripts/cppcheck.js",
    "security:c:report": "node scripts/cppcheck.js --xml 2> reports/cppcheck.xml",
    "security:secrets": "gitleaks detect --source . -v",
    "security:deps": "snyk test --severity-threshold=high || true",
    "security:licenses": "npx license-checker --production --onlyAllow 'MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC;0BSD'",
    "security:all": "npm run security && npm run security:c && npm run security:secrets && npm run security:licenses",
    "prepublishOnly": "npm run lint && npm run build && npm run test:unit",
    "postinstall": "make install || (echo \"\\n[uplink-nodejs] ERROR: 'make' was not found or failed.\\n'make' is a required prerequisite to build the native addon.\\n\\nPlease install it before running npm install:\\n  Linux:   sudo apt install build-essential\\n  macOS:   xcode-select --install\\n  Windows: Install MinGW/MSYS2 (https://www.msys2.org) and ensure 'make' is in PATH\\n\" && exit 1)",
    "install:source": "UPLINK_INSTALL=source make install",
    "install:hybrid": "UPLINK_INSTALL=hybrid make install",
    "install:prebuilt": "UPLINK_INSTALL=prebuilt make install",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shivamkumar99/uplink-node-test.git"
  },
  "keywords": [
    "storj",
    "uplink",
    "decentralized",
    "storage",
    "native",
    "binding"
  ],
  "author": "Storj Labs",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/shivamkumar99/uplink-node-test/issues"
  },
  "homepage": "https://github.com/shivamkumar99/uplink-node-test#readme",
  "files": [
    "dist",
    "native/include",
    "native/src",
    "native/prebuilds",
    "scripts/gen-def.js",
    "Makefile",
    "binding.gyp",
    "README.md",
    "docs"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.30",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.6",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "node-gyp": "^12.2.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.5"
  }
}
